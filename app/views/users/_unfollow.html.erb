<!-- When the button is clicked this form submits to the Relationships Controller and the parameters contain the id of the relationship that connects current_user with @user.-->
<%= form_for(current_user.relationships.find_by(followed_id: @user.id), html: { method: :delete }, remote: true) do |f| %>
	<%= f.submit "Unfollow", class: "btn btn-large" %>
<% end %>